<div class="content">
    <h1>{{ content.title }}</h1>
    <p>{{ content.url }}</p>
    {% for block in content.block %}
        {% if block.type == 'text' %}
            <h2>{{ block.headline }}</h2>
            <p>{{ block.text|raw }}</p>
        {% elseif block.type == 'reference' %}
            {% for page in block.links %}
                <a href="{{ sulu_content_path(page.url) }}">{{ page.excerptTitle|default(page.title) }}</a>
            {% endfor %}
        {% elseif block.type == 'image' %}
            {% for image in block.images %}
                <img src="{{ image.url }}" alt="{{ image.title }}"/>
            {% endfor %}
        {% endif %}
    {% endfor %}

    {% set snippet = sulu_snippet_load_by_area('default-area') %}
    {% if snippet %}
        <h3>{{ snippet.content.title }}</h3>
        <p>{{ snippet.content.description }}</p>
    {% endif %}
</div>